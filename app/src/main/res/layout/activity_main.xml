            android:layout_marginEnd="10dp"/>
        <EditText
            android:id="@+id/edtRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numb Of Row"
            android:textAlignment="center"
            android:inputType="number"/>
    </LinearLayout>
